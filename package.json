{
    "name": "vscodetrace",
    "displayName": "GDB auto tracer",
    "description": "dynamic tracepoint insertion using GDB",
    "version": "0.1.0",
    "publisher": "pn",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Snippets"
    ],
    "keywords": [
        "C",
        "C++",
        "LSP",
        "Clangd",
        "LLVM"
    ],
    "activationEvents": [
        "onLanguage:c",
        "onLanguage:cpp",
        "onLanguage:objective-c",
        "onLanguage:objective-cpp"
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.0",
        "vscode-languageserver": "^5.2.0"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^5.2.0",
        "typescript": "^2.0.3",
        "vscode": "^1.1.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/paul-naert/VscodeTrace"
    },
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "package-explorer",
                    "title": "Trace explorer",
                    "icon": "icons/dep.svg"
                }
            ]
        },
        "views": {
            "package-explorer": [
                {
                    "id": "varTracking",
                    "name": " "
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "clangd configuration",
            "properties": {
                "clangd.path": {
                    "type": "string",
                    "default": "clangd",
                    "description": "The path to clangd executable, e.g.: /usr/bin/clangd"
                },
                "clangd.arguments": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "Arguments for clangd server"
                },
                "clangd.syncFileEvents": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether or not to send file events to clangd (File created, changed or deleted). This can be disabled for performance consideration."
                },
                "clangd.trace": {
                    "type": "string",
                    "description": "Names a file that clangd should log a performance trace to, in chrome trace-viewer JSON format."
                }
            }
        },
        "commands": [
            {
                "command": "man-tracepoint",
                "title": "Add manual tracepoint"
            },
            {
                "command": "add-tracepoints",
                "title": "Add auto tracepoints",
                "icon": "icons/magGlass.svg"
            },
            {
                "command": "do-trace",
                "title": "Start Tracing",
                "icon": "icons/play.svg"
            },
            {
                "command": "refreshTreeView",
                "title": "Refresh",
                "icon": "icons/refresh.svg"
            },
            {
                "command": "clear",
                "title": "Clear traced variables",
                "icon": "icons/clear.svg"
            }
        ],
        "keybindings": [
            {
                "command": "add-tracepoints",
                "key": "Alt+o",
                "mac": "Alt+cmd+o",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "man-tracepoint",
                    "group": "navigation"
                },
                {
                    "command": "add-tracepoints",
                    "group": "navigation"
                }
            ],
            "view/title": [
                {
                    "command": "add-tracepoints",
                    "when": "view == varTracking",
                    "group": "navigation@2"
                },
                {
                    "command": "do-trace",
                    "when": "view == varTracking",
                    "group": "navigation@3"
                },
                {
                    "command": "refreshTreeView",
                    "when": "view == varTracking",
                    "group": "navigation@1"
                },
                {
                    "command": "clear",
                    "when": "view == varTracking",
                    "group": "navigation@0"
                }
            ]
        }
    }
}
